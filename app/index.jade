html(lang='en', ng-app='app')
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name='viewport', content='width=device-width', initial-scale='1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    title(ng-bind-template='{{pageTitle}}')
    link(rel='stylesheet', href='css/app.css')
    //-script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
    //if lte IE 7
      script(src='http://cdnjs.cloudflare.com/ajax/libs/json2/20110223/json2.js')
    //if lte IE 8
      script(src='//html5shiv.googlecode.com/svn/trunk/html5.js')
    script.
      window.brunch = window.brunch || {};
      window.brunch.server = 'localhost';
      window.brunch['auto-reload'] = {
        enabled: true
      };
    script(src='js/vendor.js')
    script(src='js/partials.js')
    script(src='js/app.js')
  body(ng-controller='AppCtrl')
    .wrapper.dropper(ng-class="{dropping: dropping}")
      .navbar.navbar-static-top
        .navbar-inner
          .container
            button.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a(href).brand LogCatr
            .nav-collapse
              div(ng-include="'/partials/nav.html'")
            .nav-collapse(style="float:right;")
              div(ng-include="'/partials/util.html'")
      .container.main-content
        div(ng-view)
      .push

    footer.footer
      .container
        p
          small By Daniel Leong | v
            span(app-version)
          small &nbsp;|&nbsp;
          small(server-addr)
          .progress(ng-show="installProgress")
            // .bar(ng-style="{width: 100*(installDone/installTotal) + '%', 'min-width': '65px'}").
            .bar(ng-style="installProgress.toCss()").
                Installing...

    #apk-dialog-container
        input#apk-dialog(style="display: none;", type="file", accept=".apk")
